<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--状态栏-->
    <View
        android:id="@+id/title_statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/bg_titlbar" />

    <RelativeLayout
        android:id="@+id/title_rlContainer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_titlbar">

        <LinearLayout
            android:id="@+id/layout_title_left"
            android:layout_width="wrap_content"
            android:maxWidth="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="15dp"
                android:src="@mipmap/back_gray"
                android:textColor="@color/font_black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/title_left_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxWidth="80dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@mipmap/close_white"
                android:visibility="gone"
                android:scaleType="centerInside"/>
        </LinearLayout>

        <TextView
            android:id="@+id/title_middle_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxWidth="224dp"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/font_title_bar"
            android:textSize="@dimen/fontSize_18" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:maxWidth="52dp"
            android:text=""
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/font_title_bar"
            android:textSize="@dimen/fontSize_14" />

    </RelativeLayout>

</LinearLayout>